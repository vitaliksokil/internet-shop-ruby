<% content_for :main do %>
  <div class="depot_form">
    <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
    <% end %>
    <div class="col-lg-4">
    <%= form_tag('/login')  do %>
      <fieldset>
        <legend>Зарегистрируйтесь, пожалуйста</legend>
        <div class="form-group">
          <%= label_tag :name, 'Имя:' %>
          <%= text_field_tag :name, params[:name],class:"form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Пароль:' %>
          <%= password_field_tag :password, params[:password],class:"form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Login", class:"btn btn-success" %>
        </div>
      </fieldset>
    <% end %>
    </div>
  </div>
<% end %>