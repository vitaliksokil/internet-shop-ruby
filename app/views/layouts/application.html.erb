              <!--                <td><a href="">наша история</a></td>-->
              <!--                <td> <a href="">благодарности</a></td>-->
              <!--                <td> <a href="">О компании</a></td>-->
              <!--                <td><a href="">наша история</a></td>-->
              <!--                <td> <a href="">благодарности</a></td>-->
              <!--                <td> <a href="">Магазины</a></td>-->
              <!--                <td><a href="">наша история</a></td>-->
              <!--                <td> <a href="">Контакты</a></td>-->
              <!--                <td> <a href="">О компании</a></td>-->
              <!--                <td><a href="">вакансии</a></td>-->
              <!--                <td> <a href="">Производители</a></td>-->
              <!--                <td> <a href="">О компании</a></td>-->
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</footer>

</body>
</html>
