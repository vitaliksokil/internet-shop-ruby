<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h3>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li class="red"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<h2>New order</h2>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, size: 40,class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address,rows: 3, cols: 40,class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email,size: 40,class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :pay_type %>
    <%= form.select :pay_type, Order::PAYMENT_TYPES,
        prompt: 'Select a payment method' %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>
